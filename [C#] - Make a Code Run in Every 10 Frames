// How to make a code run in every 10 frames not every frame?

private int frames = 0;
 
 void Update() {
     frames++;
     if (frames % 10 == 0) 
     { 
         //If the remainder of the current frame divided by 10 is 0 run the function.
         Frame10Update();
     }
 }
 
 
